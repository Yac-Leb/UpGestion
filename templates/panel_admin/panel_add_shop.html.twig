{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter un Article{% endblock %}

{% block body %}
<h1>Ajouter un Article</h1>

<div class="text-right mb-3">
    <a href="{{ path('admin_shop') }}" class="btn btn-secondary">Tous les articles</a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}

<form action="{{ path('admin_add_article') }}" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="titre">Titre</label>
        <input type="text" id="titre" name="titre" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="prix">Prix</label>
        <input type="number" step="0.01" id="prix" name="prix" class="form-control" required>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" rows="5" required></textarea>
    </div>

    <div class="form-group">
        <label for="premiere_image">Première Image</label>
        <input type="file" id="premiere_image" name="premiere_image" class="form-control-file" accept="image/*" required>
    </div>

    <div class="form-group">
        <label for="deuxieme_image">Deuxième Image</label>
        <input type="file" id="deuxieme_image" name="deuxieme_image" class="form-control-file" accept="image/*" required>
    </div>

    <button type="submit" class="btn btn-primary">Ajouter l'Article</button>
</form>

{% endblock %}
