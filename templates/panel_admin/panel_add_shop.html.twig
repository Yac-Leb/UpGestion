{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter un Article{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin_panel/panel_boutique.css') }}">
{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Ajouter un Article</h1>

    <div class="text-left mb-3">
        <a href="{{ path('admin_shop') }}" class="btn btn-secondary">Tout les articles</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.description) }}
        {{ form_row(form.premiere_image) }}
        {{ form_row(form.deuxieme_image) }}
        {{ form_row(form.submit) }}
    {{ form_end(form) }}
</div>
{% endblock %}
