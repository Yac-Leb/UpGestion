<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>        

        {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('styles/base.css') }}">

        {% endblock %}

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>

    <body>
        <nav class="top-bar">
            <div class="container">
                <a href="#" class="btn">Boutique</a>
                <a href="#" class="btn">PSG.FR</a>
                <a href="#" class="btn">Classement</a>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <span class="navbar-text">
                    Bienvenue sur notre site
                </span>

                <!-- Centrer l'image avec d-flex et justify-content-center -->
                <div class="d-flex justify-content-center flex-grow-1">
                    <img src="{{ asset('images/Paris_Saint-Germain_Logo.svg.png') }}" alt="Logo" style="height: 100px;">
                </div>

                <div class="ml-auto">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">DÃ©connexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Connexion</a>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-success ml-2">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </nav>


            {% block body %}{% endblock %}

        {% block javascripts %}
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </body>
</html>
